<!--CREATE QUESTION-->
<div class="pree_question_edit create-question-container collapse">
    <header>
        <div class="modal-header">
            <button type="button" class="close pree_question_edit_close" data-dismiss="modal" aria-label="Close">&times;</button>
            <div class="modal_header_title">
                Create a new question
            </div>
        </div>
    </header>
    <section>
        <div class="modal-body">
            <ul class="pree_question_edit_type">Question type:
                <li class="pree_question_edit_type_item">
                    <input name="pree_question_edit_type_item" type="radio" cmtyx-question-type="2" <% if (model.subType===2 ) { %>checked
                    <% } %>><span> Fact</span>
                </li>
                <li class="pree_question_edit_type_item">
                    <input name="pree_question_edit_type_item"  type="radio" cmtyx-question-type="1" <% if (model.subType===1 ) { %>checked
                    <% } %>><span> Opinion</span>
                </li>
                <li class="pree_question_edit_type_item">
                    <input name="pree_question_edit_type_item"  type="radio" cmtyx-question-type="3" <% if (model.subType===3 ) { %>checked
                    <% } %>><span> Prediction</span>
                </li>
            </ul>
            <!-- <ul class="pree_question_is_anonymous">Is anonymous:
                <li class="pree_question_is_anonymous_item">
                    <input type="checkbox" <% if (model.isAnonymous) { %>checked
                    <% } %>><span>&nbsp</span>
                </li>
            </ul> -->
            <div class="panel panel-default prediction-details">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a class="collapsed panelTitle" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">Prediction Details</a>
                        <a class="collapsed panelTitle collapseBtn" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <img class="prediction-arrow" src="images/arrow_down_grey.png" alt="">
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">


                                <div class="row">
                                    <div class="col-xs-3 col-sm-3 col-md-4 col-lg-3"><span class="expiration-date">Expiration date and time:</span></div>
                                    <div class="col-xs-9 col-sm-9 col-md-5 col-lg-4">
                                        <input type='text' class="form-control datetimepicker" id='expirationDatePicker' value="<%= expirationDate %>"/>
                                    </div>
                                </div>

                            <!-- <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2"><span class="expiration-date">Time:</span></div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <input type='text' class="form-control datetimepicker" id='expirationTimePicker' />
                                    </div>
                                </div>
                            </div> -->


                                <div class="row">
                                    <div class="col-xs-3 col-sm-3 col-md-4 col-lg-3"><span class="expiration-date">Notification date and time:</span></div>
                                    <div class="col-xs-9 col-sm-9 col-md-5 col-lg-4">
                                        <input type='text' class="form-control datetimepicker" id='notificationDatePicker' value="<%= activationDate %>" />
                                    </div>
                                </div>

                            <!-- <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2"><span class="expiration-date">Time:</span></div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <input type='text' class="form-control datetimepicker" id='notificationTimePicker' />
                                    </div>
                                </div>
                            </div> -->

                    </div>
                </div>
            </div>

            <div class="pree_question_edit_text">
                <textarea id="textarea" class="form-control question-text" maxlength="120" placeholder="Add your question here"><%= model.displayText %></textarea>
                <!-- <div id="textAreaOptionsBlock">
                    <img src="images/camera-outline.png" alt="" class="pree_question_edit_text_photo">
                    <span id="pree_question_edit_text_note"></span>
                </div> -->
            </div>
            <p class="question_error error">Please, enter your question above</p>

            <div>
                <span class="answersWordSpan">Answers:</span>
                <ul class="pree_question_edit_answers">
                    <% _.each(model.choices, function(choice, index){ %>
                        <li>
                            <div class="pree_question_edit_answers_item">
                                <input  type="radio" name="answer" data-index="<%= index %>" class="radioCreateAnswer answer-choice" <% if (choice.isCorrect) { %>checked
                                <% } %>>
                                    <div class="inputRadioImg"></div>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <%= index + 1 %>
                                        </div>
                                        <input  type="text" data-index="<%= index %>" class="form-control answer-example"   placeholder="Answer <%= index + 1 %>" value="<%= choice.displayText %>">
                                    </div>
                            </div>
                        </li>
                        <% }) %>
                </ul>
                <p class="choices_error error">Please, fill answers fields</p>
                <div class="pree_question_edit_answers_item">
                    <span class="selectAnswerText">Select the correct answer</span>
                    <a href="" class="addAnswerBtn">
                        <img src="images/add2.png" alt="" class="miniPlusBtn">
                        <span>Add an answer</span>
                    </a>
                    <a href="" class="removeAnswerBtn">
                        <span>- Remove an answer </span>
                    </a>
                </div>
            </div>

            <div class="pree_question_info">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed panelTitle" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Answer info</a>
                            <a class="collapsed panelTitle collapseBtn" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <img class="answer-arrow" src="images/arrow_down_grey.png" alt="">
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <div class="answerInfoBlock">
                                <textarea id="textarea" class="form-control answer-info-text" maxlength="120" placeholder="Add additional info here"><%= model.additionalInformation %></textarea>
                                <div class="additional-links-container">
                                    <div class="first-link"></div>
                                    <div class="second-link"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pree_question_upload_image">
                <div class="dropzone" data-ghost="false" data-canvas="true" data-originalsize="false" data-width="800" data-height="400" data-resize="true" data-save=false style="width: 100%;">
                    <input type="file" name="thumb" />
                </div>
            </div>

            <div class="createQuestionInputs">
                <div class="row">
                    <div class="form-group pree_question_edit_atribution_link">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-2">
                            <label for="atributionLinkInput" class="pree_question_edit_atribution_link_label">Attribution link</label>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-10 p-l-0">
                            <div class="input-group">
                                <input type="text" class="form-control" id="atributionLinkInput" placeholder="Attribution Link">
                                <div class="input-group-addon bigPlusBtn atribution-link-btn">
                                    <div>
                                        <img src="images/add-copy.png" alt="">
                                        <span> Add</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group pree_question_edit_categories">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-2">
                            <label for="categoriesInput" class="pree_question_edit_categories_label">Topics</label>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-10 p-l-0">
                            <div id="new-question-categories-region"></div>
                            <p class="categories_error error">Please select at least one Topic</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group pree_question_edit_tags">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-2">
                            <label for="tagsInput" class="pree_question_edit_tags_label">Tags</label>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-10 p-l-0">
                            <div id="new-question-tags-region"></div>
                        </div>
                    </div>
                </div>
                <!-- <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group pree_question_edit_tags">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                                    <label for="tagsInput" class="pree_question_edit_tags_label">Bonus points</label>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8 p-l-0">
                                    <input type="number" class="form-control" min="0" max="1000" id="bonusPointsInput" value=<%= model.bonusPoints %>>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group pree_question_edit_tags">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
