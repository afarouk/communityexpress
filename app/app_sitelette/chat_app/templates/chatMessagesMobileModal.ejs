<div class="modal-header">
	<div class="back-arrow">
		<span class="glyphicon glyphicon-arrow-left cmtyx_special_icon_color"></span>
	</div>
	<div class="user-presence">
		<i class="fa fa-circle-o offline" aria-hidden="true"></i>
		<i class="fa fa-check-circle online" aria-hidden="true"></i>
	</div>
	<span class="otherUser"><%= otherUserName %></span>
	<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">
	<div class="messages-region" name="chat-messages">
		<!-- chat messages view will be rendered here -->
	</div>
	<div class="user-typing">
		<div class="typing-icon">
			_<i class="fa fa-pencil" aria-hidden="true"></i>
		</div>
		<div class="typing-message">
			<%= otherUserName %> is typing<i class="ellipsis">...</i>
		</div>
	</div>
	<div class="type-message">
		<input type="text" class="message-input" name="" placeholder="Type a message here..." required="required">
		<button type="button" name="send" class="fa fa-arrow-circle-right" disabled></button>
	</div>
</div>