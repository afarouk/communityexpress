<div class="header cmtyx_color_2">
    <style>.loyalty_program_block #flag:after { border-bottom-color: <%= $('.cmtyx_color_2').css('background-color') %> }</style>
    <div id="flag"><span>free</span></div>
    <span class="title">Loyalty Card</span>
    <span class="collapse_btn">&#9660;</span>
    <span class="loyalty_card_icon"></span>
</div>
<div class="body">
    <% if (hasLoyaltyProgram) { %>
    <div class="loyalty_inner_wrapper">
        <div class="prize_block">
            <div class="ui-grid-a prize_container">
                <div class="ui-block-a">
                    <div class="prize_text_block">
                        <span class="prize_text"><%= displayText %></span>
                        <span class="prize_condition"><%= conditions %></span>
                        <span class="prize_date"><% if (expirationDate) { %> till <%= expirationDate %> <% } %></span>
                    </div>
                </div>
                <div class="ui-block-b ">
                    <img src="<%= url %>"></img>
                </div>
            </div>
            <div class="loyalty_status"></div>
        </div>
        <div class="no_qr_code_block cmtyx_color1">
            <button class="refresh_button_style1 cmtyx_border_color_1 cmtyx_text_color_1"> Refresh </button>
        </div>
        <!-- <div class="qr_code_block cmtyx_border_color_1">
            <span class="close_btn"></span>
            <span class="qr_code_title title cmtyx_text_color_1">This is your personal identification code</span>
            <div class="qr_code_container">
                <img src="themes/1/placeholder_images/getUserQRCode.png" alt="" >
            </div>
        </div> -->
    </div>
    <div class="share_container">
        <div class="share_btn_block cmtyx_share_icon_color"
            uuid="">
            <span class="icon cmtyx_share_icon_color fa fa-share"></span> <span class="text">Share</span>
        </div>
        <div class="share_block">
            <div class="ui-grid-c">
                <div class="sms_input_block">
                    <input data-role="none" class="phone_us sms_input" type="tel" name="sms_input" placeholder="(US mobile)" value="" size="14" maxlength="64">
                    <span class="sms_send_button cmtyx_color_1 cmtyx_border_color_1">Send</span>
                </div>
                <div class="ui-block-a text sms_block">
                    <a href="" class="share_sms">
                        <div class="share_icons_round_block">
                            <i class="cmtyx_share_icon_color share_icon_round fa fa-mobile"></i>
                        </div>
                    </a>
                </div>
                <div class="ui-block-b text email_block">
                    <a href="" class="share_email">
                        <div class="share_icons_round_block">
                            <i class="cmtyx_share_icon_color share_icon_round fa fa-envelope"></i>
                        </div>
                    </a>
                </div>
                <div class="ui-block-c text facebook_block">
                    <a href="" target="_blank" class="share_facebook">
                        <div class="share_icons_round_block">
                            <i class="cmtyx_share_icon_color share_icon_round fa fa-facebook"></i>
                        </div>
                    </a>
                </div>
                <div class="ui-block-d text twitter_block">
                    <a href="" target="_blank" class="share_twitter">
                        <div class="share_icons_round_block">
                            <i class="cmtyx_share_icon_color share_icon_round fa fa-twitter"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="no_promotions">
        (No Loyalty program)
    </div>
    <% } %>
</div>
