<div data-role="page" id="address" class="page">
    <div class="circles_block">
    </div>
    <div class="navigation">
        <div class="left_arr_block nav_back_btn">
            <span>Back</span>
        </div>
        <div class="page_title">Pickup/Delivery details</div>
        <div class="right_arr_block nav_next_btn">
            <span>Next</span>
        </div>
    </div>
    <div data-role="tabs" id="tabs">
        <div data-role="navbar">
            <% if (allowPickUp && allowDelivery) { %>
                <ul>
                    <li>
                        <a href="#delivery" data-id="delivery" data-ajax="false" class="leftBtn ui-btn-active cmtyx_border_color_1 cmtyx_text_color_1 cmtyx_color_1 "><i class="fa fa-car" aria-hidden="true"></i>Delivery</a>
                    </li>
                    <li class="pick_up_tab">
                        <a href="#pick_up" data-id="pick_up" data-ajax="false" class="rightBtn cmtyx_border_color_1 cmtyx_text_color_1"><i class="fa fa-shopping-bag" aria-hidden="true"></i>Pick up</a>
                    </li>
                </ul>
            <% } %>
        </div>
        <% if (allowDelivery) { %>
            <div id="delivery" class="ui-body-d ui-content">
                <p class="choose_card_text">Choose address:</p>
                <form>
                    <% if (!addrIsEmpty) { %>
                        <label for="saved_address"><%= deliveryAddress.number + ' ' + deliveryAddress.street + ', ' + deliveryAddress.city + ', ' + deliveryAddress.state %></label>
                        <input type="radio" name="radio-choice-address" id="saved_address" class="cardRadioChoice" checked='checked'>
                        <label for="add_another">Add another address</label>
                        <input type="radio" name="radio-choice-address" id="add_another" class="cardRadioChoice">
                    <% } else { %>
                        <label for="saved_address" class="hidden"></label>
                        <input type="radio" name="radio-choice-address" id="saved_address" class="cardRadioChoice hidden">
                        <label for="add_another">Add another address</label>
                        <input type="radio" name="radio-choice-address" id="add_another" class="cardRadioChoice" checked='checked'>
                    <% } %>
                </form>
                <div class="ui-grid-a back_next_btns">
                    <div class="ui-block-a p-r-10">
                        <button class="ui-btn ui-corner-all back_btn nav_back_btn cmtyx_border_color_1 cmtyx_text_color_1">Back</button>
                    </div>
                    <div class="ui-block-b p-l-10">
                        <button class="ui-btn ui-corner-all next_btn nav_next_btn cmtyx_color_1 cmtyx_border_color_1">Next</button>
                    </div>
                </div>
            </div>
        <% } %>
        <% if (allowPickUp) { %>
            <div id="pick_up" class="ui-body-d ui-content">
                <% if (address) { %>
                    <p class="order_address">Your order pickup location: <%= address.name %>
                    </br><%= address.number + ', ' + address.street + ', ' + address.street2 %>
                    </br><%= address.city + ', ' + address.state + ' - ' + address.zip %>
                    </br>phone: <%= address.phone %></p>
                <% } %>
                <div id="shipping_map" class="map_container">
                </div>
                <div class="ui-grid-a back_next_btns">
                    <div class="ui-block-a p-r-10">
                        <button class="ui-btn ui-corner-all back_btn nav_back_btn cmtyx_border_color_1 cmtyx_text_color_1">Back</button>
                    </div>
                    <div class="ui-block-b p-l-10">
                        <button class="ui-btn ui-corner-all next_btn nav_next_btn cmtyx_color_1 cmtyx_border_color_1">Next</button>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
