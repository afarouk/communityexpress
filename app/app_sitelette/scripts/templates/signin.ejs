<% if (title) { %>
    <div class="signin_alert_header" data-role="header" data-theme="a">
        <h1><%= title %></h1>
    </div>
<% } %>
<div role="main" class="ui-content">
    <form action="#" method="post">
        <div class="ui-grid-solo">
            <div class="ui-grid-a">
                <fieldset class="auth_fieldset" data-role="controlgroup" data-corners="false" data-shadows="false" data-theme="c">
                    <p class="login_error hidden error">Incorrect username / email or password</p>
                    <label for="username">Username / Email:</label>
                    <input autocapitalize="off" type="text" name="username" data-corners="false" placeholder="Username / Email" />
                    <label for="password">Password:</label>
                    <input autocapitalize="off" type="password" name="password" data-corners="false" placeholder="Password" />
                </fieldset>
            </div>
        </div>
        <div class="ui-grid-a">
            <!--div class="ui-block-a">
                <a href="#" class="close_button" data-role="button" data-corners="false">Cancel</a>
            </div-->

            <div class="ui-grid-solo">
                <div class="ui-block-a">
                    <a type="submit" class="submit_button" data-role="button" data-corners="true">Sign in</a>
                </div>
            </div>
        </div>
    </form>
    <div class="ui-grid-a signin_links">
        <div class="ui-block-a">
            <a class="signup_button cmtyx_color1" data-theme="c"  data-corners="false">Create Account</a>
        </div>
        <div class="ui-block-b">
            <!-- <a href="https://chalkboardstoday.com/support?svc=passwordChange"class="signup_button" data-theme="c"  data-corners="false">Forgot password ?</a> -->
            <a href="" class="forgot_password_button cmtyx_color1" data-theme="c"  data-corners="false">Forgot password ?</a>
        </div>
    </div>
</div>
