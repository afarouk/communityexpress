<div role="main" class="ui-content">
    <form class="new_message_form" action="#" method="post">
    <% if (promotionTypes) { %>
        <div class="ui-grid-solo">
            <div class="ui-grid-a">
                <select name="promotiontype" id="cmntyex_select-promotion-type" data-corners="false">
                    <% promotionTypes.each(function (promotion) { %>
                        <option value="<%= promotion.get('enumText') %>"><%= promotion.get('displayText') %></option>
                    <% }) %>
                </select>
            </div>
        </div>
    <% } %>
        <div class="ui-grid-solo">
            <div class="ui-grid-a">
                <% if (!hideTitle) { %>
                    <input type="text" placeholder="Title" autocapitalize="off" name="title" id="title" data-corners="false" />
                <% } %>
                <% if (uploadPlaceHolder) { %>
                    <textarea autocapitalize="off" placeholder="<%= uploadPlaceHolder %>" class="comntyex-upload_message_input" id="message" name="message" data-corners="false" />
                <% } else { %>
                    <textarea autocapitalize="off" placeholder="Message" class="comntyex-upload_message_input" id="message" name="message" data-corners="false" />
                <% } %>
                <div class="preview-container">
                    <img class="preview" src="">
                </div>
                <input class="file-selector" id="file" type="file" class="file_input" name="file" data-corners="false"/>
            </div>
        </div>
        <div class="ui-grid-a">
            <div style="color:#FF0000; display:none;" id="err_text"></div>
            <div class="ui-block-a">
                <a href="#" class="submit_button" data-role="button" data-corners="false">Submit</a>
            </div>
            <div class="ui-block-b">
                <a href="#" class="close_button" data-role="button" data-corners="false">Cancel</a>
            </div>
        </div>
    </form>
</div>
