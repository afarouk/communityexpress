<div class="catalog_item_main_view">
    <% if (mediaURLs[0] !== '' || typeof mediaURLs[0] !== 'undefined' ) { %>
        <div class="sides_item_image_small_container">
            <img src="<%= mediaURLs[0] %>" alt="" />
        </div>
    <% } %>
    <div class="sides_extras_item_details">
        <span class="item_name"><%= itemName %></span>
        <div class="order_price">$0</div>
    </div>
    <div class="sides_extras_item_added_versions"></div>
    <div class="sides_extras_item_versions">
        <div class="ui-field-contain versions_buttons">
            <% _.each(selectorVersions, function(selector, index){ %>
                <select name="select-version-<%= index %>" id="select-version-<%= index %>" data-mini="true">
                    <% _.each(selector, function(version){ %>
                        <option value="<%= version %>"><%= version %></option>
                    <% }) %>
                </select>
            <% }) %>
        </div>
        <div class="float_right">
            <div class="select_container catalog_item_counter">
                <div class="ui-grid-b">
                    <div class="ui-block-c quantity_plus incrementQuantity">
                        <a class="left plus_version_button ui-btn ui-shadow ui-corner-all ui-nodisc-icon ui-alt-icon ui-icon-plus ui-btn-icon-notext disabled" catalogid="COMBO3" catalogdisplaytext="Combo3"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="sides_extras_detailed">
    <% if (mediaURLs[0] !== '' || typeof mediaURLs[0] !== 'undefined' ) { %>
        <img src="<%= mediaURLs[0] %>" alt="" />
    <% } %>
    <div class="catalog_item_attributes">
        <div class="short_description"><%= shortDescription %></div>
        <div class="long_description"><%= longDescription %></div>
        <% _.each(attributes, function(status, attr) { %>
            <div class="catalog_item_attribute <%= status ? 'true_attr' : 'false_attr' %>"><%= attr %></div>
        <% }) %>
    </div>
</div>
