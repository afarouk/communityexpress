                    </div>
                    <div class="ui-block-b cmntyex-add_to_basket_quantity quantity_field">
                         <span class="quantity" id="itemCount_<%=catalogId%>" ><%= quantity %></span>
                    </div>
                    <div class="ui-block-c quantity_plus incrementQuantity">
                        <a class="left plus_button ui-btn ui-shadow ui-corner-all ui-nodisc-icon ui-alt-icon ui-icon-plus ui-btn-icon-notext"  catalogId="<%=catalogId%>" catalogDisplayText="<%=displayText%>"></a>
                    </div>
                </div>
            <% } %>
        </div>
        <span class="order_price cmtyx_text_color_1">$ <%= quantity * price %></span>
    </div>
    <div class="order_subitem_name">
		<% if (catalogId !== "SIDES") { %>
			<%=  ownComboItemText %>
		<% } %>
	</div>
