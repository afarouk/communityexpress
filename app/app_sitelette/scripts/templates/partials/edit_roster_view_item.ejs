        <% if (selected) { %>ui-icon-delete<%} else {%>ui-icon-none<% } %>
        ui-btn-icon-left">
   <span>    <%=  quantity  %> x </span> <span style="padding-left:100px;" ><%=  displayText %></span>
    </a>-->
<% } else { %>
    <span class="order_name"><%=  displayText %></span>
