<div class="versions-container">
    <div class="item-version">
        <div class="versions_texts">
            <span class="version_name"><%=  itemName %></span>
            <span class="version_items"><%=  versionText %></span>
        </div>
        <div class="float_right">
            <div class="select_container">
                <div class="ui-grid-b">
                    <div class="ui-block-a quantity_minus decrementQuantity">
                        <a class="right minus_button ui-btn ui-shadow ui-corner-all ui-nodisc-icon ui-alt-icon ui-icon-minus ui-btn-icon-notext"></a>
                    </div>
                    <div class="ui-block-b cmntyex-add_to_basket_quantity quantity_field">
                         <span class="quantity"><%= quantity %></span>
                    </div>
                    <div class="ui-block-c quantity_plus incrementQuantity">
                        <a class="left plus_button ui-btn ui-shadow ui-corner-all ui-nodisc-icon ui-alt-icon ui-icon-plus ui-btn-icon-notext"></a>
                    </div>
                </div>
            </div>
            <span class="versions-price order_price cmtyx_text_color_1">$ <%= totalPrice %></span>
        </div>
        <div class="versions-description">
            <span class="order_name"><%=  shortDescription %></span>
        </div>
    </div>
</div>
